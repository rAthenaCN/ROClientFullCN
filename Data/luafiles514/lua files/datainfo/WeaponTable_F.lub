--===============================================
-- function : ReqWeaponName
-- descript : Weapon Data 파일명을 Return
-- returns : str
--===============================================

function ReqWeaponName ( index )
	if (WeaponNameTable == nil) then
		return ""
	end

	local NameMsg = WeaponNameTable[index]

	if NameMsg ~= nil then
		return NameMsg
	else
		return ""
	end
end


